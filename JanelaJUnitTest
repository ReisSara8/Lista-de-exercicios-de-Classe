import org.junit.Test;
import static org.junit.Assert.*;

/**
 *
 * @author Alunos
 */
public class JanelaJUnitTest {
    
    @Test
    public void testarEDefinirComprimento(){
    Janela aluminio = new Janela();
    aluminio.setComprimento((double)1.20);
    assertEquals(1.20, aluminio.getComprimento(),0);
    }
    
    @Test
    public void testarEDefinirLargura(){
    Janela aco = new Janela();
    aco.setLargura((double)1.50);
    assertEquals(1.50, aco.getLargura(),0);
    }
    
    @Test
    public void testarEDefinirAltura(){
    Janela madeira = new Janela();
    madeira.setAltura((double) 1.00);
    assertEquals(1.00, madeira.getAltura(),0);
    }
    
    @Test
    public void testarEDefinirPreco(){
    Janela antiRuido = new Janela();
    antiRuido.setPreco((double)900.00);
    assertEquals(900.00, antiRuido.getPreco(),0);
    }
    
    @Test
    public void testarEDefinirMarca(){
    Janela vidro = new Janela();
    vidro.setMarca("Sasazaki");
    assertEquals("Sasazaki", vidro.getMarca());
    }
    
    @Test
    public void testarEDefinirInsulfilm(){
    Janela espelhada = new Janela();
    espelhada.setInsulfilm("Possuí Insulfilm");
    assertEquals("Possuí Insulfilm", espelhada.getInsulfilm());
    
    }
 
   
}
